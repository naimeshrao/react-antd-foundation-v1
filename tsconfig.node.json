{
  "compilerOptions": {
    /* No build output â€“ used only for type checking */
    "noEmit": true,
    /* Node environment */
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "types": ["node"],
    /* Module resolution (Vite friendly) */
    "moduleResolution": "bundler",
    /* Stability */
    "skipLibCheck": true,
    "strict": true,
    /* Better compatibility */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* Code quality */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules"]
}
